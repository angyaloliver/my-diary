<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/white">

    <ImageView
        android:id="@+id/splashImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/diary_logo"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tvSplashTitle"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashImageView"
        android:fontFamily="@font/give_you_glory"
        android:gravity="center"
        android:padding="30dp"
        android:text="My Diary"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom">
        <TextView
            android:id="@+id/tvIconSrc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSplashTitle"
            android:fontFamily="@font/give_you_glory"
            android:text="Icon made by Kiranshastry from www.flaticon.com"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>